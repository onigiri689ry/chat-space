
.chat-side
  .side-header
    .side-box
      %h3.user-name
        = current_user.name
      %ul.menu
        = link_to new_group_path, class: "kaku" do
          %i.fa.fa-edit
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'settei')
  .side-bar__groups-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message